@using RestaurantApp.Core
@model Restaurant

<div class="card">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a asp-page="./Detail" asp-route-restaurantId="@Model.Id"><i class="fas fa-info-circle text-info"></i></a>
        <a asp-page="./Edit" asp-route-restaurantId="@Model.Id"><i class="fas fa-edit text-info"></i></a>
        <a asp-page="./Delete" asp-route-restaurantId="@Model.Id"><i class="fas fa-trash-alt text-info"></i></a>
    </div>
</div>