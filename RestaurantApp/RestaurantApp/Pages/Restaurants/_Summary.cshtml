@using RestaurantApp.Core
@model Restaurant

<div class="card shadow-sm">
    <div class="card-header bg-transparent text-info">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <div><strong>Location:&nbsp;</strong> @Model.Location</div>
        <div><strong>Cuisine:&nbsp;</strong> @Model.Cuisine</div>
    </div>
    <div class="card-footer">
        <a asp-page="./Detail" asp-route-restaurantId="@Model.Id"><i class="fas fa-info-circle text-info mr-3"></i></a>
        <a asp-page="./Edit" asp-route-restaurantId="@Model.Id"><i class="fas fa-edit text-info mr-3"></i></a>
        <a asp-page="./Delete" asp-route-restaurantId="@Model.Id"><i class="fas fa-trash-alt text-info"></i></a>
    </div>
</div>
