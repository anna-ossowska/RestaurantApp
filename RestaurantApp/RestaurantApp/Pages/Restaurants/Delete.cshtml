@page "{restaurantId:int}"
@model RestaurantApp.Pages.Restaurants.DeleteModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delete</title>
</head>
<body>
    <h2>Delete</h2>

    <div class="alert alert-danger">Are you sure you want to delete @Model.Restaurant.Name?</div>
    <form method="post">
        <button type="submit" class="btn btn-danger">Yes</button>
        <a asp-page="./List" class="btn btn-light">Cancel</a>
    </form>
</body>
</html>
